extends layout

block content
    .content
        h1= title
        br
        form(id="form" action="javascript:;" onsubmit="return send(this)")
            .form-group
                label(for="resource_uuid") Resource UUID:
                input.form-control(id="resource_uuid" type="text")
            .form-group
                label(for="resource_type") Resource Type:
                input.form-control(id="resource_type" type="text")
            .form-group
                label(for="resource_model") Resource Model:
                input.form-control(id="resource_model" type="text")
            .form-group
                label(for="resource_adapter") Resource Adapter:
                input.form-control(id="resource_adapter" type="text")
            .form-group
                label(for="name") Name:
                input.form-control(id="name" type="text")
            .form-group
                label(for="description") Resource Adapter:
                textarea.form-control(id="description")
            .form-group
                label(for="string_config") Resource Adapter:
                textarea.form-control(id="string_config")
            .form-group
                label Auto start:
                | &nbsp
                div(class="form-check form-check-inline")
                    input.form-check-input(type="radio" id="auto_start_true" value="TRUE" name="auto_start")
                    label.form-check-label(for="auto_start_true") true
                div(class="form-check form-check-inline")
                    input.form-check-input(type="radio" id="auto_start_false" value="FALSE" name="auto_start")
                    label.form-check-label(for="auto_start_true") false
            .form-group
                label Keep connected:
                | &nbsp
                div(class="form-check form-check-inline")
                    input.form-check-input(type="radio" id="keep_connected_true" value="TRUE" name="keep_connected")
                    label.form-check-label(for="keep_connected_true") true
                div(class="form-check form-check-inline")
                    input.form-check-input(type="radio" id="keep_connected_false" value="FALSE" name="keep_connected")
                    label.form-check-label(for="keep_connected_false") false
            .form-group
                label(for="name") Host IP:
                input.form-control(id="host_ip" type="text")
            .form-group
                input(class="btn btn-dark" type="submit")
                | &nbsp;
                input(class="btn btn-secondary" type="reset")
